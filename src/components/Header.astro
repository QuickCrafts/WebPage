---
const { route } = Astro.props;

const routeTitles = [
    {
        label: "Inicio",
        route: "/",
    },
    {
        label: "¿Quiénes Somos?",
        route: "/aboutUs",
    },
    {
        label: "Productos",
        route: "/product",
    },
    {
        label: "Contáctenos",
        route: "/contact",
    },
];
---

<>
    <div class="header">
        <div class="cont">
            <a href="/">
                <img class="logo" src="../../LogoCompleto.png" />
            </a>
            <div class="elements">
                {
                    routeTitles.map((t) => (
                        <a href={t.route}>
                            <div
                                class={
                                    t.route === route ? "item-select" : "item"
                                }
                            >
                                {t.label}
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
    <div class="responsiveNav">
        <div class="columnNav">
            <img class="logo" src="../../public/LogoCompleto.png" />
            <div class="elementsResponsive">
                {
                    routeTitles.map((t) => (
                        <a href={t.route}>
                            <div
                                class={
                                    t.route === route ? "item-select" : "item"
                                }
                            >
                                {t.label}
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</>
<style>
    .header {
        display: flex;
        position: fixed;
        padding: 15px 34px;
        height: 50px;
        width: 100vw;
        align-items: center;
        justify-content: center;
        background: #fff;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }
    .cont {
        display: flex;
        justify-content: space-between;
        width: 80vw;
    }
    .logo {
        height: 35px;
    }
    .elements {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 30px;
        flex-shrink: 0;

        @media screen and (max-width: 850px) {
            /*display: none !important;*/
        }
    }
    .responsiveNav {
        position: absolute;
        height: 100vh;
        width: 100vw;
        justify-content: flex-end;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5);
        top: 0px;
        right: 0px;
        z-index: 1000;
        /*display: flex !important;*/
        display: none !important;

        @media screen and (min-width: 850px) {
            display: none !important;
        }
    }
    .columnNav {
        display: flex;
        padding: 20px;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        gap: 20px;
        overflow: hidden;
        background: var(--secondary-light);
        box-shadow: rgba(0, 0, 0, 0.25) 0px 4px 4px 0px;
        width: 250px;
        height: 100vh;
    }
    .elementsResponsive {
        display: flex;
        gap: 10px;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        width: 100%;
        height: 100%;
        padding: 0px 12px;
    }
    .item {
        display: flex;
        padding: 5px;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 16px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
        border-radius: 8px;
        cursor: pointer;
        color: var(--secondary-dark);
    }
    .item:hover {
        color: var(--primary-main);
    }

    .item-select {
        display: flex;
        padding: 5px;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 16px;
        font-style: normal;
        font-weight: 600;
        line-height: normal;
        border-radius: 8px;
        cursor: pointer;
        color: var(--primary-main);
        border: 1px solid var(--primary-main);
    }
</style>
