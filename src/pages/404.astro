---
import Global from "../layouts/Global.astro";
import Fondo from "../backgrounds/BackAbout.astro";
---

<Global route="/">
    <div class="general">
        <img src="../../404.png" />
        <p class="primarySubtitle">
            Oh-no!
        </p>
        <p class="generalText">No podemos encontrar esa p√°gina.</p>
        <a
            href="/"
            class="generalText botton"
        >
            Regresar al Inicio
        </a>
