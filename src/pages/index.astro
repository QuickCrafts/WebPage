---
import Global from "../components/Global.astro";
import Header from "../components/Header.astro";
import GeneralPage from "../layouts/GeneralPage.astro";
import Fondo from "../layouts/Fondo.astro";
---

<Global>
	<Header route="/" />
	<GeneralPage>
		<div class="home">
			<div class="presentation">
				<img src="../../LogoCompleto.png" />
				<div class="secondarySubtitle">
					Desarrollando para mejorar tu vida
				</div>
			</div>
			<div class="imagen">
				<img src="../../App_icon_v1.png" />
			</div>
		</div>
	</GeneralPage>
	<Fondo />
</Global>

<style>
	.home {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		gap: 40px;
	}
	.presentation {
		display: flex;
		padding: 20px;
		width: 40%;
		flex-direction: column;
		justify-content: center;
		align-items: flex-start;
		gap: 20px;
	}
	.imagen {
		width: 30%;
	}
</style>
