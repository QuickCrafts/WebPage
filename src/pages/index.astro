---
import Global from "../components/Global.astro";
import Fondo from "../backgrounds/BackHome.astro";
---

<Global route="/">
	<div class="general">
		<div class="home">
			<div class="presentation">
				<img src="../../LogoCompleto.png" />
				<div class="secondarySubtitle">
					Desarrollando para mejorar tu vida
				</div>
				<a
					href="https://www.linkedin.com/company/quickcrafts"
					class="generalText botton"
					target="_blank">LinkedIn</a
				>
			</div>
			<div class="imagen">
				<img src="../../team.png" />
			</div>
		</div>
	</div>
	<Fondo />
</Global>

<style>
	.general {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
	}
	.home {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-around;
		gap: 40px;
		@media screen and (max-width: 850px) {
			flex-direction: column;
			gap: 0px;
		}
		@media screen and (max-width: 450px) {
			flex-direction: column;
			gap: 40px;
		}
	}
	.presentation {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		gap: 20px;
		width: 40%;

		@media screen and (max-width: 850px) {
			width: 80%;
		}
	}
	.imagen {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 31vw;
		@media screen and (max-width: 850px) {
			width: 80%;
		}
	}
	.botton {
        display: flex;
        flex-direction: row;
        padding: 15px;
        border-radius: 8px;
        gap: 10px;

		background: var(--primary-main);
		box-shadow: rgba(0, 0, 0, 0.25) 0px 4px 4px 0px;
	}
	.botton:hover {
		color: var(--white);
	}
</style>
