---
import Global from "../components/Global.astro";
import "../styles/globals.css";
import Fondo from "../backgrounds/BackProducts.astro";
import type Proyects from "../interfaces/proyects.astro";
import { GoChevronLeft, GoChevronRight } from "react-icons/go";

const products: Proyects[] = [
    {
        name: "QuickFins",
        url: "https://quickfins.co/",
        icon: "../../QuickFins.png",
        slogan: "El mejor amigo de tus finanzas personales.",
        description:
            "QuickFins es una aplicación web que te ayuda a gestionar tus finanzas personales, registrando ingresos, gastos y más.",
        galery: [
            { url: "../../public/products/QuickFins/QuickFins1.png" },
            { url: "../../public/products/QuickFins/QuickFins2.png" },
            { url: "../../public/products/QuickFins/QuickFins3.png" },
            { url: "../../public/products/QuickFins/QuickFins4.png" },
        ],
    },
];
---

<Global route="/product">
    <div class="product">
        <div class="gridCards">
            {
                products.map((product) => (
                    <div class="productCards">
                        <a href={product.url} target="_blank">
                            <img class="productIcon" src={product.icon} />
                        </a>
                        <div class="generalText">{product.slogan}</div>
                        <div class="carrusel">
                            <GoChevronLeft />
                            <div class="galery">
                                {product.galery.map((photo) => (
                                    <img src={photo.url} />
                                ))}{" "}
                            </div>
                            <GoChevronRight />
                        </div>
                        <div class="generalText" style="width: 90%">{product.description}</div>
                    </div>
                ))
            }
        </div>
        <div class="presentation">
            <div class="primaryTitle_Primary">Productos</div>
            <div class="generalText">
                Con estas herramientas queremos ayudarte a mejorar diferentes
                aspectos de tu vida diaria.
            </div>
        </div>
    </div>
    <Fondo />
</Global>

<style>
    .product {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 40px;
        flex: 1 0 0;
        align-self: stretch;
        height: 100%;

        @media screen and (max-width: 850px) {
            flex-direction: column-reverse;
        }
    }
    .presentation {
        display: flex;
        width: 80%;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        gap: 20px;
    }
    .gridCards {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        width: 100%;
        align-items: center;
        place-content: center;
    }
    .productCards {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 40vw;
        padding: 20px;
        gap: 10px;
        border-radius: 20px;
        border: 1px solid #d8d8d8;
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        text-align: justify;

        @media screen and (max-width: 850px) {
            width: 80vw;
        }
    }
    .productDescription {
        display: flex;
        flex-direction: column;
        text-align: justify;
        padding: 0px 20px;
        gap: 10px;
        flex: 1 0 0;
    }
    .productIcon {
        height: 50px;
        width: 175px;
    }
    .carrusel {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
    }
    .galery {
        display: flex;
        flex-direction: row;
        align-items: center;
        overflow: scroll;
        width: 100%;
    }
</style>
